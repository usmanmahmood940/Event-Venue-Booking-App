<resources>


    <style name="button_style" >
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="backgroundColor">@color/white</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Trenddr.EditText.Style" parent="@android:style/Widget.EditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textColorHint">@color/font</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="Zawajina.TextView.Style" parent="@android:style/Widget.TextView">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textColorHint">@color/font</item>
        <item name="android:drawableBottom">@drawable/line</item>
    </style>

    <style name="Zawajina.HomeTextView.Style" parent="@android:style/Widget.TextView">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">14dp</item>

    </style>

    <style name="Zawajina.HomeEditView.Style" parent="@android:style/Widget.EditText">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@null</item>

    </style>

    <style name="Widget.AppTheme.TextInputLayoutList" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorEditText</item>
        <item name="boxStrokeColor">@color/dark_pink</item>
        <item name="android:textColorHint">@color/grey_ride_cancel</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/font</item>
    </style>

    <style name="Widget.AppTheme.TextInputLayoutListSmall" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/colorEditText</item>
        <item name="boxStrokeColor">@color/colorStrokeEditText</item>
        <item name="android:textColorHint">@color/grey_ride_cancel</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextAppearance">@style/error_appearance</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/font</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/gmail_red</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="checkbox_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/font</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="WorldTalent.EditText.Style2" parent="Base.Widget.MaterialComponents.TextInputEditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/font</item>

    </style>

    <style name="WorldTalent.EditText.Small" parent="Base.Widget.MaterialComponents.TextInputEditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/font</item>

    </style>

    <style name="WorldTalent_Medium_TextView" parent="@android:style/Widget.TextView">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/sf_compact_text_regular</item>

    </style>

    <style name="WorldTalent.UpdateProfileTextView.Style" parent="@android:style/Widget.TextView">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>

    </style>

    <style name="WorldTalent.UpdateProfileEditText.Style" parent="@android:style/Widget.EditText">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ItemTextView" parent="@android:style/Widget.TextView">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTextViewSmall" parent="@android:style/Widget.TextView">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="ItemTextViewLight" parent="@android:style/Widget.TextView">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:textColor">@color/non_active_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemTextViewNormal" parent="@android:style/Widget.TextView">

        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:textColor">@color/font</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="my_dialog_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/colorAccent</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/user_cancel_bg_color</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/colorAccent</item>    <!--days of the week-->
    </style>

</resources>
